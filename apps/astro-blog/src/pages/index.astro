---
import type Schema from "schema-dts"

import MainPageLayout from "~/layouts/MainPageLayout.astro"
import IncrementingButton from "~/components/IncrementingButton.astro"

// TODO: any way to pre-render only the button component itself?
export const prerender = false

const title = "Phillip's Blog Home Page"
const description =
  "Take a look at some of the cool things Phillip has made and written about!"
const imagePath = "pfp.webp"
const imageAlt = "A cute frog - Phillip's profile picture"
---

<MainPageLayout
  class="flex flex-1 justify-center items-center"
  pageTitle={title}
  pageDescription={description}
  imagePath={imagePath}
  imageAlt={imageAlt}
  openGraph={{
    basic: {
      title,
      type: "website",
      image: new URL(imagePath, Astro.url).toString(),
      url: Astro.url.toString(),
    },
    image: {
      url: new URL(imagePath, Astro.url),
      alt: imageAlt,
    },
  }}
  schema={{
    "@context": "https://schema.org",
    "@type": "Blog",
    name: title,
    description: description,
    url: Astro.url.toString(),
  } satisfies Schema.WithContext<Schema.Blog>}
>
  <IncrementingButton name="astro" />
</MainPageLayout>
