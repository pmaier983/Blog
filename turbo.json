{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production",
        ".env"
      ]
    },
    "start": {
      "dependsOn": [
        "^start"
      ],
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production",
        ".env"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env"
      ]
    }
  }
}
