{
  "name": "@repo/pulumi-blog",
  "scripts": {
    "build": "tsc",
    "up": "dotenv -e .env -e ../../.env.prod -- pulumi up --stack dev --yes",
    "deploy": "npm run docker:build:push --prefix ../../ && dotenv -e .env -- pulumi up --stack dev --yes",
    "deploy-prod": "npm run docker:build:push --prefix ../../ && dotenv -e .env -e .env.prod -- pulumi up --stack prod",
    "destroy": "dotenv -e .env -- pulumi destroy --stack dev --yes",
    "destroy-prod": "dotenv -e .env -e ../../.env.prod -- pulumi destroy --stack prod",
    "preview": "dotenv -e .env -e ../../.env.prod -- pulumi preview",
    "ssh": "gcloud compute ssh pulumi-deployed-blog"
  },
  "dependencies": {
    "@pulumi/docker": "^4.5.7",
    "@pulumi/gcp": "^8.0.0",
    "@pulumi/pulumi": "^3.142.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^18",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "typescript": "^5.0.0"
  }
}
