{
  "name": "@repo/pulumi-blog",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "deploy": "dotenv -e .env -e ../../.env.prod -- pulumi up --yes",
    "destroy": "dotenv -e .env -e ../../.env.prod -- pulumi destroy --yes",
    "preview": "dotenv -e .env -e ../../.env.prod -- pulumi preview",
    "ssh": "gcloud compute ssh pulumi-deployed-blog"
  },
  "dependencies": {
    "@pulumi/docker": "^4.5.7",
    "@pulumi/gcp": "^8.0.0",
    "@pulumi/pulumi": "^3.113.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^18",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "typescript": "^5.0.0"
  }
}
